<div class="container topcontent">
        <h1 class="top-title"><i class="fa fa-map-marker" style="padding-right:30px;"></i>Find the Best way to Travel</h1>
        <div class="col-sm-8 col-sm-offset-2 form-inline" id="search-box">
            <div class="col-sm-12 box">
                <div class="form-group col-sm-6">
                    <input type="text" class="form-control input-from" id="from_search" data-toggle="tooltip-from" data-placement="top" title="Please enter source" data-trigger="manual" placeholder="Choose a Starting point ...">
                </div>
                <div class="form-group col-sm-6">
                    <input type="text" class="form-control input-to" id="to_search" data-toggle="tooltip-to" data-placement="top" title="Please enter destination" data-trigger="manual" placeholder="Choose Destination ...">
                </div>
            </div>
            <button type="submit" id="searchSubmit" class="btn btn-default btn-primary pull-left btn-block col-sm-12 search-button"><i class="fa fa-search"></i> FIND BEST RIDES
            </button>
        </div>
</div>